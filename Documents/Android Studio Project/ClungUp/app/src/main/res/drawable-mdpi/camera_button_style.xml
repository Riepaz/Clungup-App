<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/camera" android:state_pressed="false" />
    <item android:state_selected="false">
        <bitmap android:alpha="0.5" android:src="@drawable/camera"/>
    </item>
    <item android:drawable="@drawable/camera" android:state_focused="false" />
    <item android:state_focused="true">
        <bitmap android:alpha="0.5" android:src="@drawable/camera"/>
    </item>
</selector>